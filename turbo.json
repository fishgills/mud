{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "serve": {
      "dependsOn": ["^build"],
      "persistent": true
    },
    "build": {
      "env": [
        "NODE_ENV",
        "OPENAI_API_KEY",
        "DM_OPENAI_TIMEOUT_MS",
        "DM_OPENAI_CACHE_MAX",
        "DM_OPENAI_CACHE_TTL_MS",
        "DM_USE_VERTEX_AI",
        "PORT",
        "WORLD_SERVICE_URL",
        "DM_CENTER_NEARBY_CACHE_TTL_MS",
        "DM_CHUNK_CACHE_TTL_MS",
        "WORLD_CHUNK_CACHE_TTL_MS",
        "GCP_PROJECT_ID",
        "GOOGLE_CLOUD_PROJECT",
        "GCP_REGION",
        "VERTEX_LOCATION",
        "WORLD_RENDER_CACHE_TTL_MS",
        "GOOGLE_CLOUD_REGION"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "db:migrate:dev": {
      "cache": false,
      "persistent": true
    },
    "db:migrate:deploy": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "generate": {
      "dependsOn": ["^generate"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^generate"],
      "cache": false,
      "env": [
        "REDIS_URL",
        "SLACK_TEST_ID",
        "SLACK_TEST_MESSAGE",
        "GOOGLE_CLOUD_REGION"
      ]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "cache": false
    }
  }
}
