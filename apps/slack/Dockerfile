# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build slack`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t slack`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system slack && \
          adduser --system -G slack slack

COPY apps/slack/dist slack/
COPY apps/slack/package.json slack/
RUN chown -R slack:slack .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix slack --omit=dev -f install

CMD [ "node", "slack" ]
