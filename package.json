{
  "name": "@mud/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "turbo": "node ./node_modules/turbo/bin/turbo",
    "build": "yarn turbo run build",
    "db:migrate:deploy": "yarn turbo run db:migrate:deploy",
    "db:migrate:dev": "yarn turbo run db:migrate:dev",
    "db:push": "yarn turbo run db:push",
    "test": "yarn turbo run test",
    "db:seed": "yarn turbo run db:seed",
    "serve": "yarn turbo run serve",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "yarn turbo run generate",
    "lint": "yarn turbo run lint",
    "prepare": "husky",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && node scripts/sync-changelog.js",
    "slack:manifest": "node apps/slack-manifest/slack-manifest.js",
    "slack:manifest:update:dev": "node apps/slack-manifest/slack-manifest.js update-dev",
    "slack:manifest:update:prod": "node apps/slack-manifest/slack-manifest.js update-prod"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@prisma/engines": "^6.16.3",
    "@swc/core": "^1.10.12",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node22": "^22.0.2",
    "@types/jest": "^29.5.13",
    "conventional-changelog-angular": "^8.1.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.1",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,mdx,mjs,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {},
  "resolutions": {
    "baseline-browser-mapping": "2.9.14"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "packageManager": "yarn@1.22.19"
}
